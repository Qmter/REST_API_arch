{
    "/fail2ban/jail/add": {
        "TESTS": {
            "1": {
                "description": "Delete existing fail2ban service",
                "steps": {
                    "1": {
                        "endpoint": "/fail2ban/jail/add",
                        "method": "POST",
                        "parameters": {"jail_name": "random"},
                        "expected": {"errCode": 0, "httpCode": 200}
                    },
                    "2": {
                        "endpoint": "/fail2ban/jail/list",
                        "method": "GET",
                        "parameters": {},
                        "validation": {"jail_name": {"ref": "#TESTS.1.steps.1.parameters.jail_name"}},
                        "expected": {"errCode": 0, "httpCode": 200}
                    },
                    "3": {
                        "endpoint": "/fail2ban/jail/delete",
                        "method": "POST",
                        "parameters": {"jail_name": {"ref": "#TESTS.1.steps.1.parameters.jail_name"}},
                        "expected": {"errCode": 0, "httpCode": 200}
                    }
                }
            },
            "2": {
                "description": "Delete non-existing fail2ban service",
                "steps": {
                    "1": {
                        "endpoint": "/fail2ban/jail/delete",
                        "method": "POST",
                        "parameters": {"jail_name": "random"},
                        "expected": {"errCode": -1, "httpCode": 500}
                    }
                }
            }
        },
        "AFTER-TEST": {
            "steps": {
                "3": {
                    "endpoint": "/fail2ban/jail/delete",
                    "method": "POST",
                    "parameters": {"jail_name": {"ref": "#TESTS.1.steps.1.parameters.jail_name"}},
                    "expected": {"errCode": 0, "httpCode": 200}
                }
            }
        }
    }
}